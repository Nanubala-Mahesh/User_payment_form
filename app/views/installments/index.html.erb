<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-7">
    <div class="page header" >
      <h1>Listing Installments</h1>

    </div>






    <table class="table table-stiped">
      <thead>
        <tr>
          <th>Building</th>
          <th>Amount</th>
          <th>Installment date</th>
          <th>Status</th>
          <th>Details</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @installments.each do |installment| %>
        <tr>
          <td><%= installment.building_id %></td>
          <td><%= installment.amount %></td>
          <td><%= installment.installment_date %></td>
          <td><%= installment.status %></td>
          <td><%= installment.details %></td>
          <td><%= link_to 'Show', installment %></td>
          <td><%= link_to 'Edit', edit_installment_path(installment) %></td>
          <td><%= link_to 'Destroy', installment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>


  <div class="col-md-5">
    <div class="page header" >
      <h1>Add  Installments</h1>

    </div>


    <%= link_to 'New Installment', new_installment_path, class: "btn btn-success" %>
  </div>
</div>