<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-7">
    <div class="page header" >
      <h1>Listing Users</h1>
    </div>

    <% if @users.empty? %>
    <p>No User Found  </p>
    <% else %>
    <table class="table table-stiped">

      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default"  %></td>
          <td><%= link_to 'Destroy', user, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
  <br>

  <div class="col-md-5">
    <div class="header">
    <h1> Add User </h1>
    </div>
    <%= link_to 'New User', new_user_path, class: "btn btn-success" %>
  </div>
</div>